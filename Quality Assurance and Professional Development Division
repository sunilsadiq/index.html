        // Section details data
        const sectionDetails = {
            "pd-medical": {
                title: "Professional Development (Medical and Allied Health)",
                duties: "This section is responsible for the continuous professional development of medical and allied health practitioners. Key duties include organizing training programs, accrediting continuing medical education activities, maintaining professional development records, and ensuring compliance with CPD requirements.",
                guidelines: "All medical and allied health practitioners must complete a minimum of 50 CPD hours annually. CPD activities must be relevant to the practitioner's scope of practice. Records must be maintained for audit purposes.",
                procedures: "1. Submit CPD plan at beginning of year. 2. Attend accredited CPD activities. 3. Maintain records of participation. 4. Submit annual CPD portfolio for review. 5. Address any deficiencies identified."
            },
            "pd-nursing": {
                title: "Professional Development (Nursing and Midwifery)",
                duties: "This section oversees the professional development of nursing and midwifery professionals. Responsibilities include developing competency frameworks, organizing specialized training, maintaining professional standards, and facilitating career progression pathways.",
                guidelines: "Nursing and midwifery professionals must complete 45 CPD hours annually, with at least 30 hours in their specialty area. All activities must be recorded in the professional portfolio.",
                procedures: "1. Develop annual learning plan. 2. Participate in relevant CPD activities. 3. Document learning outcomes. 4. Submit portfolio for annual review. 5. Implement feedback for improvement."
            },
            "registration": {
                title: "Registration (Medical and Allied Health)",
                duties: "This section manages the registration and licensing of all medical and allied health practitioners. Duties include processing applications, verifying qualifications, maintaining the register, and issuing annual practicing certificates.",
                guidelines: "All practitioners must hold current registration to practice. Registration requires proof of qualifications, identity, and good standing. Annual renewal requires evidence of CPD compliance and payment of fees.",
                procedures: "1. Submit application with required documents. 2. Verification of qualifications. 3. Assessment against standards. 4. Registration decision. 5. Issuance of certificate. 6. Annual renewal process."
            },
            "default": {
                title: "Section Details",
                duties: "Select a section to view its duties and responsibilities.",
                guidelines: "Select a section to view its guidelines.",
                procedures: "Select a section to view its procedures."
            }
        };

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Load default practitioner table (doctors)
            loadPractitionerTable('doctors');
            
            // Set up event listeners for profession type radio buttons
            document.querySelectorAll('input[name="professionType"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    loadPractitionerTable(this.value);
                });
            });
            
            // Set up event listeners for section cards
            document.querySelectorAll('.section-card').forEach(card => {
                card.addEventListener('click', function() {
                    showSectionDetails(this.getAttribute('data-section'));
                });
            });
            
            // Initially hide section details
            document.getElementById('section-details').style.display = 'none';
        });

        // Load practitioner table based on selection
        function loadPractitionerTable(type) {
            const tableBody = document.getElementById('practitionerTable');
            tableBody.innerHTML = '';
            
            practitioners[type].forEach(practitioner => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${practitioner.id}</td>
                    <td>${practitioner.name}</td>
                    <td>${practitioner.empNumber}</td>
                    <td>${practitioner.specialty}</td>
                    <td>${practitioner.location}</td>
                    <td>
                        <button class="details-btn" onclick="showPractitionerDetails('${type}', ${practitioner.id})">
                            <i class="fas fa-eye me-1"></i>View Details
                        </button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Show practitioner details in modal
        function showPractitionerDetails(type, id) {
            const practitioner = practitioners[type].find(p => p.id === id);
            if (!practitioner) return;
            
            // Set basic information
            document.getElementById('modal-name').textContent = practitioner.name;
            document.getElementById('modal-empno').textContent = practitioner.empNumber;
            document.getElementById('modal-specialty').textContent = practitioner.specialty;
            document.getElementById('modal-location').textContent = practitioner.location;
            document.getElementById('modal-regdate').textContent = "01/04/2023";
            document.getElementById('modal-expiry').textContent = "31/03/2024";
            
            // Populate courses
            const coursesList = document.getElementById('courses-list');
            coursesList.innerHTML = '';
            practitioner.courses.forEach(course => {
                const li = document.createElement('li');
                li.className = 'list-group-item';
                li.textContent = course;
                coursesList.appendChild(li);
            });
            
            // Populate trainings
            const trainingsList = document.getElementById('trainings-list');
            trainingsList.innerHTML = '';
            practitioner.trainings.forEach(training => {
                const li = document.createElement('li');
                li.className = 'list-group-item';
                li.textContent = training;
                trainingsList.appendChild(li);
            });
            
            // Populate seminars
            const seminarsList = document.getElementById('seminars-list');
            seminarsList.innerHTML = '';
            practitioner.seminars.forEach(seminar => {
                const li = document.createElement('li');
                li.className = 'list-group-item';
                li.textContent = seminar;
                seminarsList.appendChild(li);
            });
            
            // Populate meetings
            const meetingsList = document.getElementById('meetings-list');
            meetingsList.innerHTML = '';
            practitioner.meetings.forEach(meeting => {
                const li = document.createElement('li');
                li.className = 'list-group-item';
                li.textContent = meeting;
                meetingsList.appendChild(li);
            });
            
            // Show the modal
            const modal = new bootstrap.Modal(document.getElementById('practitionerModal'));
            modal.show();
        }

        // Show section details
        function showSectionDetails(sectionKey) {
            const details = sectionDetails[sectionKey] || sectionDetails['default'];
            const detailsElement = document.getElementById('section-details');
            
            document.getElementById('detail-title').textContent = details.title;
            document.getElementById('duties-content').textContent = details.duties;
            document.getElementById('guidelines-content').textContent = details.guidelines;
            document.getElementById('procedures-content').textContent = details.procedures;
            
            detailsElement.style.display = 'block';
            
            // Scroll to details
            detailsElement.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>
